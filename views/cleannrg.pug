doctype html
html(lang="en")
	include includes/head.pug
	body
		section.hero.is-full-height
			.hero-head
				include includes/nav.pug
			.hero-body
				.container.has-text-centered
					h1.title.is-1(style="padding-top: 1rem;") Template
			.hero-foot
		article.article
			include includes/body.pug
			+section("Your Clean Energy Report")
				p 
					strong *Integers, please!
				br
				div.totalenergy
					h4 Total Household Energy Use:
					form 
						p How many in your household?
						- var members = "[?] people";
							input(type="text")
						br
						br
						p How many rooms does your house have?
						- var rooms = "[?] rooms";
							input(type="text")
						br
						br
						p Estimate:
						br
				div.gasandtransport
					h4 Gas and Transportation:
					form 
							p Make and Model:
								br
								input(type="text")
							p Miles/Gallon:
							- var mipg = "miles per gallon";
								input(type="text")
							br
							br
							p Dollars/Gallon:
							- var dollarsg = "dollars per gallon";
								input(type="text")
							p Your Miles/Day:
							- var mipday = "miles per day";
								input(type="text")
							- var mipyr = parseFloat(mipday)*365;
							- var dollarsyr = parseFloat(mipyr)*parseFloat(mipg)*parseFloat(dollarsg);
							p You spend #{dollarsyr} dollars annually on gas or fuel.





		//- Footer
		include includes/footer.pug